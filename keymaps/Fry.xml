<keymap version="1" name="Fry" parent="$default">
  <action id="CheckinProject">
    <keyboard-shortcut first-keystroke="ctrl k" />
    <mouse-shortcut keystroke="control button2" />
  </action>
  <action id="CommentByBlockComment">
    <keyboard-shortcut first-keystroke="shift ctrl slash" />
    <keyboard-shortcut first-keystroke="shift ctrl divide" />
    <mouse-shortcut keystroke="control button3 doubleClick" />
    <keyboard-shortcut first-keystroke="alt v" />
  </action>
  <action id="CommentByLineComment">
    <keyboard-shortcut first-keystroke="ctrl slash" />
    <keyboard-shortcut first-keystroke="ctrl divide" />
    <keyboard-shortcut first-keystroke="alt c" />
    <mouse-shortcut keystroke="control button3" />
  </action>
  <action id="EditorAddOrRemoveCaret">
    <mouse-shortcut keystroke="shift alt button1" />
    <mouse-shortcut keystroke="alt button1" />
  </action>
  <action id="QuickEvaluateExpression">
    <keyboard-shortcut first-keystroke="ctrl alt f8" />
  </action>
</keymap>